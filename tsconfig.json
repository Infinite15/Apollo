{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "test-lib",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "typings",
    "lib",
    "test-lib"
  ]
}
